{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "eu-west-2",
      "iam_instance_profile": "packer_builder",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL_HA-8.4.0_HVM-20210504-x86_64-2-Hourly2-GP2",
          "root-device-type": "ebs"
        },
        "owners": [
          "309956199498"
        ],
        "most_recent": true
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 50,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ec2-user",
      "instance_type": "t3.micro",
      "ami_name": "dq-ops-httpd-redhat {{isotime | clean_ami_name}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "gets3content.py",
      "destination": "/home/ec2-user/gets3content.py"
    },
    {
      "type": "file",
      "source": "startcloudwatchlogs.sh",
      "destination": "/tmp/startcloudwatchlogs.sh"
    },
    {
      "type": "file",
      "source": "crons",
      "destination": "/tmp/crons"
    },
    {
      "type": "file",
      "source": "cwconfigs/cwlogs.conf",
      "destination": "/tmp/cwlogs.conf"
    },
    {
      "type": "file",
      "source": "ssl_expire_script",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "execute_command": "echo {{user `ssh_username`}} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "mkdir /home/ec2-user/ssl_expire_script/",
        "chmod 0770 /home/ec2-user/ssl_expire_script/",
        "mv /tmp/ssl_expire_script /home/ec2-user/ "

      ]
    }
  ]
}
